<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>title</th>
            <th>body</th>
            <th></th>
        </tr>

    </thead>
</table>
<tbody>
<% @books.each do |book| %>
<tr>
    <tb><%= book.title %></tb>
    <tb><%= book.body %></tb>
    <tb><%= link_to "show", book_path(book.id) %></tb>
    <tb><%= link_to "edit", edit_book_path(book.id) %></tb>
    <tb><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure? " %> </tb>
　</tr>
　<% end %>
　</tbody>
</table>
<h3>New book</h3>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
 <br> <%= f.submit 'Ceate Book' %>
<% end %>